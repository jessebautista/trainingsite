---
// src/layouts/MainLayout.astro
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import CodingSection from '../components/CodingSection.astro';
import Footer from '../components/Footer.astro';
import ContentLoader from '../components/ContentLoader.astro';
---
<style>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
  }
  .header {
    position: sticky;
    top: 0;
    z-index: 1000;
    width: 100%;
    background-color: #333;
  }
  .content {
    display: flex;
    flex: 1;
    padding-top: 20px; /* Add spacing between header and content */
  }
  .sidebar {
    width: 250px;
    flex-shrink: 0;
    height: calc(100vh - 80px); /* Adjust height to exclude header and top padding */
    overflow-y: auto;
    padding: 20px;
    box-sizing: border-box;
  }
  .coding-section {
    width: 300px;
    flex-shrink: 0;
    height: calc(100vh - 80px); /* Adjust height to exclude header and top padding */
    overflow-y: auto;
    padding: 20px;
    box-sizing: border-box;
  }
  .main-content {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
    box-sizing: border-box;
  }
  .footer {
    flex-shrink: 0;
  }
</style>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Astro Three-Part Layout</title>
  </head>
  <body>
    <div class="header">
      <Header />
    </div>
    <div class="content">
      <div class="sidebar">
        <Sidebar />
      </div>
      <main class="main-content">
        <ContentLoader />
        <slot />
      </main>
      <div class="coding-section">
        <CodingSection />
      </div>
    </div>
    <div class="footer">
      <Footer />
    </div>
  </body>
</html>